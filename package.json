{
  "name": "plantae",
  "version": "1.0.0",
  "description": "MERN App",
  "main": "server.js",
  "repository": "https://github.com/OshidhiePeiris/Plantea_Web_Application_BACKEND.git",
  "author": "Plantae",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client": "cd frontend && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "data:import": "node seeder",
    "data:destroy": "node seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "sweetalert2": "^10.15.5"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
